generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
  engineType    = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chat {
  id      Int    @id @default(autoincrement())
  roomId  Int
  userId  String
  message String
  Room    Room   @relation(fields: [roomId], references: [id])
  User    User   @relation(fields: [userId], references: [id])
}

model Room {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  adminId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Chat      Chat[]
  User      User     @relation(fields: [adminId], references: [id])
  Shapes    Shapes[]
}

model Shapes {
  id         Int       @id @default(autoincrement())
  type       shapeType
  startX     Int
  startY     Int
  color      String?
  height     Int
  width      Int
  lineWidth  Int?
  endX       Int?
  endY       Int?
  radius     Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @default(now())
  roomId     Int
  userId     String
  pencilPath Json?
  Room       Room      @relation(fields: [roomId], references: [id])
  User       User      @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @unique
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Chat      Chat[]
  Room      Room[]
  Shapes    Shapes[]
}

enum shapeType {
  RECTANGLE
  CIRCLE
  LINE
  ERASER
  PENCIL
}
